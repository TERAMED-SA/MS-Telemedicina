generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Package {
  id            String         @id
  name          String
  description   String?
  price         Decimal
  currency      String
  billingPeriod String
  features      String[]      
  isActive      Boolean        
  createdAt     DateTime       
  updatedAt     DateTime       

  subscriptions Subscription[]
}

model Subscription {
  id                    String      @id
  packageId             String
  userId                String?
  status                String
  startDate             DateTime
  endDate               DateTime?
  renewsAt              DateTime?
  canceledAt            DateTime?
  paymentMethod         String?
  paymentMethodDetails  Json?
  paymentTransactionId  String?
  paymentTransactionStatus String?
  externalRef           String?
  createdAt             DateTime    
  updatedAt             DateTime    

  package               Package     @relation(fields: [packageId], references: [id])
}
