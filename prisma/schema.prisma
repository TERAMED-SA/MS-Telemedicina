generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BeneficiaryType {
  INDIVIDUAL
  CORPORATE
}

model Package {
  id            String   @id
  name          String
  description   String?
  price         Decimal
  currency      String
  billingPeriod String
  features      String[]
  isActive      Boolean
  createdAt     DateTime
  updatedAt     DateTime

  subscriptions Subscription[]
}

model Beneficiary {
  id                     String   @id @default(uuid())
  name                   String
  phone                  String   @unique
  email                  String   @unique
  associatedEmails       String[] @unique
  associatedPhoneNumbers String[] @unique
  cpf                    String   @unique
  address                String
  city                   String
  zipCode                String
  state                  String

  birthDate DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Subscription    Subscription[]
  beneficiaryType BeneficiaryType

  external_user_id String @unique @map("external_user_id")
}

model Subscription {
  id                       String      @id
  packageId                String
  beneficiaryId            String
  beneficiary              Beneficiary @relation(fields: [beneficiaryId], references: [external_user_id])
  status                   String
  paymentMethod            String?
  paymentMethodDetails     Json?
  paymentTransactionId     String?
  paymentTransactionStatus String?
  externalRef              String?

  startDate  DateTime
  endDate    DateTime?
  renewsAt   DateTime?
  canceledAt DateTime?
  createdAt  DateTime
  updatedAt  DateTime

  package Package @relation(fields: [packageId], references: [id])
}
