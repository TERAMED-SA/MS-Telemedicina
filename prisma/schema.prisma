generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Package {
  id            String   @id
  name          String
  description   String?
  price         Decimal
  currency      String
  billingPeriod String
  features      String[]
  isActive      Boolean
  createdAt     DateTime
  updatedAt     DateTime

  subscriptions Subscription[]
}

model OtpRequest {
  id          String   @id @default(uuid())
  phoneNumber String
  code        String
  createdAt   DateTime @default(now())
  expiresAt   DateTime
  verified    Boolean  @default(false)
  beneficiaryId String
  beneficiary Beneficiary @relation(fields: [beneficiaryId], references: [external_user_id])
}

model Beneficiary {
  id      String @id @default(uuid())
  name    String
  phone   String @unique
  email   String @unique
  cpf     String @unique
  bi      String @unique
  address String
  city    String
  zipCode String
  state   String

  birthDate DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  otp OtpRequest[]

  external_user_id String @unique @map("external_user_id")
}

model Subscription {
  id                       String  @id
  packageId                String
  userId                   String
  status                   String
  paymentMethod            String?
  paymentMethodDetails     Json?
  paymentTransactionId     String?
  paymentTransactionStatus String?
  externalRef              String?

  startDate  DateTime
  endDate    DateTime?
  renewsAt   DateTime?
  canceledAt DateTime?
  createdAt  DateTime
  updatedAt  DateTime

  package Package @relation(fields: [packageId], references: [id])
}
